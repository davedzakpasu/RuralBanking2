<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/tool_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radialback">

            <com.cergi.ruralbanking.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_marginPercent="15%"
                app:layout_widthPercent="70%">

                <!-- 1e Ligne -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtRefOper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="REF."
                        android:inputType="number"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>
                <!-- 2e Ligne -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtNumCpte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:hint="Num. Cpte"
                        android:inputType="number"
                        android:maxLength="12"
                        android:padding="5dp"
                        android:textAllCaps="true"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/fingerV"
                        android:layout_width="75dp"
                        android:layout_height="72dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/ic_fprint" />

                    <ImageView
                        android:id="@+id/imgPreviewV"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_img" />
                </LinearLayout>
                <!-- 4e Ligne -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtNomReduit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:enabled="false"
                        android:hint="Nom Client"
                        android:padding="5dp"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>
                <!-- 5e Ligne -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtMontant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:hint="Montant"
                        android:inputType="number"
                        android:padding="5dp"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>
                <!-- 6e Ligne -->

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="IDENTITE DU DEPOSANT"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffad18"
                    android:textStyle="bold" />
                <!-- 7e Ligne -->

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtNomDeposant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ- "
                        android:hint="Nom"
                        android:inputType="textPersonName"
                        android:padding="5dp"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

                <!-- 8e Ligne -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_widthPercent="70%">

                    <EditText
                        android:id="@+id/txtAdresse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 "
                        android:hint="Adresse"
                        android:inputType="textCapWords"
                        android:padding="5dp"
                        android:textCursorDrawable="@null"
                        android:textStyle="bold" />
                </android.support.design.widget.TextInputLayout>

                <!-- 14e Ligne -->

                <com.cergi.ruralbanking.PercentLinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_red"
                        android:padding="10dp"
                        android:text="@string/cancel"
                        android:textColor="#ffffff"
                        app:layout_widthPercent="25%" />

                    <Button
                        android:id="@+id/btnValider"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/button_green"
                        android:padding="5dp"
                        android:text="Valider"
                        android:textColor="#ffffff"
                        app:layout_widthPercent="25%" />
                </com.cergi.ruralbanking.PercentLinearLayout>

            </com.cergi.ruralbanking.PercentLinearLayout>

        </ScrollView>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>